<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity"
    android:background="@drawable/fonas">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="249dp"
        android:layout_height="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:text="Vestuvių pagalbininkas"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btnVest"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:background="@color/colorPrimary"
        android:onClick="btnVestViet_Click"
        android:text="Vestuvių vieta" />

    <Button
        android:id="@+id/btnVart"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:onClick="btnVart_Click"
        android:text="Vartotojo paskyra" />

    <Button
        android:id="@+id/btnVedej"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="130dp"
        android:background="@color/colorPrimary"
        android:onClick="btnVedej_Click"
        android:text="Vedėjas" />

    <Button
        android:id="@+id/btnPhoto"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_below="@+id/textView3"
        android:onClick="btnPhoto_Click"
        android:text="Fotografas"
        android:background="@color/colorPrimary"/>

</RelativeLayout>